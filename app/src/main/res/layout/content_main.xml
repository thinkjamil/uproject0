<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jam.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps"
        android:id="@+id/toplabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="openApp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app1_name"
        android:id="@+id/app1"
        style="@style/NormAppButtons"
        android:layout_below="@+id/toplabel"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/toplabel"
        android:layout_alignStart="@+id/toplabel"
        android:layout_alignRight="@+id/toplabel"
        android:layout_alignEnd="@+id/toplabel"
        android:onClick="openApp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app2_name"
        android:id="@+id/app2"
        style="@style/NormAppButtons"
        android:layout_below="@+id/app1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/toplabel"
        android:layout_alignStart="@+id/toplabel"
        android:layout_alignRight="@+id/toplabel"
        android:layout_alignEnd="@+id/toplabel"
        android:onClick="openApp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app3_name"
        android:id="@+id/app3"
        style="@style/NormAppButtons"
        android:layout_below="@+id/app2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/toplabel"
        android:layout_alignStart="@+id/toplabel"
        android:layout_alignRight="@+id/toplabel"
        android:layout_alignEnd="@+id/toplabel"
        android:onClick="openApp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app4_name"
        android:id="@+id/app4"
        style="@style/NormAppButtons"
        android:layout_below="@+id/app3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/toplabel"
        android:layout_alignStart="@+id/toplabel"
        android:layout_alignRight="@+id/toplabel"
        android:layout_alignEnd="@+id/toplabel"
        android:onClick="openApp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app5_name"
        android:id="@+id/app5"
        style="@style/CapAppButtons"
        android:layout_below="@+id/app4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/toplabel"
        android:layout_alignStart="@+id/toplabel"
        android:layout_alignRight="@+id/toplabel"
        android:layout_alignEnd="@+id/toplabel"
        android:onClick="openApp"/>
</RelativeLayout>
